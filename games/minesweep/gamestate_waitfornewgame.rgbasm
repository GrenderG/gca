include "gamestate.rgbinc"
include "window.rgbinc"

export GameStateFunc_WaitForNewGame

section "gamestate_waitfornewgame", rom0

GameStateFunc_WaitForNewGame:
	TestPadInput_Released HRAM_INPUT, PADF_START
	jr nz, .start_not_pushed
		SetGameStateFunc GAMESTATE_FUNC_NEW_GAME
		halt
		Window_Hide
		ret
	.start_not_pushed

	halt
	ret

